<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/post_item">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_image_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:src="@drawable/person"
                />

            <TextView
                android:id="@+id/post_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/post_image_profile"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:text=""
                android:textColor="@color/colorPrimaryDark"

                android:clickable="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@+id/image_profile"

                android:textColor="#639E96"
                android:textSize="10sp" />

            <Button

                android:id="@+id/post_settings"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_dots"
                android:visibility="visible" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp" />

            <TextView
                android:id="@+id/post_publisherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp" />

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="10dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="12dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/post_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_feed_like1"/>

            <TextView
                android:id="@+id/post_nLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="10sp"
                android:layout_marginTop="8dp"/>

            <ImageButton
                android:id="@+id/post_btnComment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="30dp"

                android:background="@drawable/comment" />

            <TextView
                android:id="@+id/post_nComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/post_btnShare"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/share" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

